@charset "UTF-8";
.page_bg {
  background: #f7f7f7 !important;
  min-height: 100%;
  position: fixed;
  width: 100%;
  z-index: -1;
  left: 0;
  top: 0;
}
.list_nav {
  background: #fff;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
}
.list_nav view {
    color: #262626;
    width: 33.3%;
    float: left;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #fff;
}
.list_nav view.active {
      color: #1fa4fc;
      border-bottom: 4rpx solid #1fa4fc;
}
/* 搜索 */
